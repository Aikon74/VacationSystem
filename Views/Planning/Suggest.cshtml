@{
    ViewData["Title"] = "Foreslå planleggingsdag";
    var institutions = ViewBag.Institutions as List<string>;
}

<h2>Foreslå planleggingsdag</h2>

<form asp-action="Suggest" method="post">
    <div>
        <label for="date">Dato:</label>
        <input type="date" name="date" required />
    </div>

    <div>
        <label for="institution">Skole/barnehage:</label>
        <select name="institution" required>
            <option value="">-- Velg institusjon --</option>
            @foreach (var inst in institutions)
            {
                <option value="@inst">@inst</option>
            }
        </select>
    </div>

    <div>
        <button type="submit">Send forslag</button>
    </div>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }

    @if (ViewBag.Success != null)
    {
        <p style="color:green">@ViewBag.Success</p>
    }
</form>
