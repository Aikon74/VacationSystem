<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VacationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VacationSystem.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        int? userId = Context.Session.GetInt32("UserId");
        int? role = Context.Session.GetInt32("Role");
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3 px-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/Home/Index">VacationSystem</a>

                @if (userId != null)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index">🏠 Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vacation/Calculate">📅 Beregn ferie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Planning/Suggest">🏫 Foreslå fridag</a>
                            </li>

                            @if (role == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Planning/AdminPanel">🧾 Planleggingsforslag</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Account/UserList">👥 Brukerliste</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Account/AddUser">➕ Legg til bruker</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/Account/Logout">🔓 Logg ut</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - VacationSystem
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
